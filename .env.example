# flipflop.statex.cz E-commerce Platform - Environment Variables Example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# =============================================================================
# Common Variables (All Services)
# =============================================================================
NODE_ENV=production
LOG_LEVEL=info
LOG_TIMESTAMP_FORMAT=YYYY-MM-DD HH:mm:ss
LOG_FILE_PATH=./logs/app.log
SERVICE_NAME=e-commerce-platform

# =============================================================================
# Docker Compose Port Configuration
# =============================================================================
FRONTEND_PORT=3000
API_GATEWAY_PORT=3001
PRODUCT_SERVICE_PORT=3002
ORDER_SERVICE_PORT=3003
USER_SERVICE_PORT=3004
SUPPLIER_SERVICE_PORT=3006
AI_SERVICE_PORT=3007
ANALYTICS_SERVICE_PORT=3008
NGINX_NETWORK_NAME=nginx-network

# =============================================================================
# Database Configuration
# =============================================================================
# Production database server: db-server-postgres (container name)
# Database is accessible via nginx-network Docker network
DB_HOST=db-server-postgres
DB_PORT=5432
DB_USER=dbadmin
DB_PASSWORD=
DB_NAME=ecommerce
DB_SYNC=false

# =============================================================================
# Redis Configuration
# =============================================================================
# Production Redis server: db-server-redis (container name)
REDIS_HOST=db-server-redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=
JWT_EXPIRES_IN=7d

# =============================================================================
# Service URLs
# =============================================================================
# Production website: https://flipflop.statex.cz
API_URL=http://api-gateway:3001
FRONTEND_URL=https://flipflop.statex.cz
CORS_ORIGIN=https://flipflop.statex.cz
USER_SERVICE_URL=http://e-commerce-user-service:3004
PRODUCT_SERVICE_URL=http://e-commerce-product-service:3002
ORDER_SERVICE_URL=http://e-commerce-order-service:3003
SUPPLIER_SERVICE_URL=http://e-commerce-supplier-service:3006
AI_SERVICE_URL=http://e-commerce-ai-service:3007
ANALYTICS_SERVICE_URL=http://e-commerce-analytics-service:3008
# Notification Microservice Configuration
# Production URL (external access)
NOTIFICATION_SERVICE_URL=https://notifications.statex.cz
# Internal Docker URL (use when running in Docker network)
# NOTIFICATION_SERVICE_URL=http://notifications-microservice:3368
LOGGING_SERVICE_URL=http://logging-microservice:3009

# =============================================================================
# PayU Payment Gateway Configuration
# =============================================================================
PAYU_MERCHANT_ID=
PAYU_POS_ID=
PAYU_CLIENT_ID=
PAYU_CLIENT_SECRET=
PAYU_API_URL=https://secure.payu.com/api/v2_1
PAYU_SANDBOX=false

# =============================================================================
# OpenRouter AI Configuration
# =============================================================================
OPENROUTER_API_KEY=
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free
OPENROUTER_TIMEOUT=60

# =============================================================================
# SendGrid Email Configuration
# =============================================================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@flipflop.statex.cz
SENDGRID_FROM_NAME=flipflop.statex.cz

# =============================================================================
# Telegram Configuration
# =============================================================================
TELEGRAM_BOT_TOKEN=

# =============================================================================
# WhatsApp Configuration
# =============================================================================
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_API_URL=https://graph.facebook.com/v18.0

# =============================================================================
# Frontend (Next.js) Public Variables
# =============================================================================
NEXT_PUBLIC_API_URL=https://flipflop.statex.cz/api
NEXT_PUBLIC_FRONTEND_URL=https://flipflop.statex.cz
NEXT_PUBLIC_PAYU_POS_ID=

# =============================================================================
# Logging Microservice Configuration
# =============================================================================
LOG_STORAGE_PATH=./logs
LOG_ROTATION_MAX_SIZE=100m
LOG_ROTATION_MAX_FILES=10
